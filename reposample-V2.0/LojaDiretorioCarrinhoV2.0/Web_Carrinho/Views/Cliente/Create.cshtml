@model Data_LojaDiretorioCarrinho.Models.Cliente

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastro de Usuário</h1>

<br />

<h4>Preencha os campos abaixo para cadastrar um novo cliente</h4>
<hr />
<div class="row">
    <div class="col-md-9">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div>
                <a class="btn btn-dark" asp-action="Index">Voltar</a>
            </div>
            <br />

            <div class="form-group">
                <label asp-for="CliNome" class="control-label"></label>
                <input asp-for="CliNome" class="form-control" />
                <span asp-validation-for="CliNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CliCpf" class="control-label"></label>
                <input asp-for="CliCpf" class="form-control" />
                <span asp-validation-for="CliCpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CliTelefone" class="control-label"></label>
                <input asp-for="CliTelefone" class="form-control" />
                <span asp-validation-for="CliTelefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CliEmail" class="control-label"></label>
                <input asp-for="CliEmail" class="form-control" />
                <span asp-validation-for="CliEmail" class="text-danger"></span>
            </div>
            <br />
                <div class="card">
                    <div class="card-header">Localização</div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="CliEndereco" class="control-label"></label>
                            <input asp-for="CliEndereco" class="form-control" />
                            <span asp-validation-for="CliEndereco" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CliCidade" class="control-label"></label>
                            <input asp-for="CliCidade" class="form-control" />
                            <span asp-validation-for="CliCidade" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Criar Usuário" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
