@model Data_LojaDiretorioCarrinho.Models.Produto

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastro do Produto</h1>

<br />

<h4>Preencha os campos abaixo para cadastrar um novo produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div>
                <a class="btn btn-dark" asp-action="Index">Voltar</a>
            </div>
            <br />

            <div class="form-group">
                <label asp-for="PdtNome" class="control-label"></label>
                <input asp-for="PdtNome" class="form-control" />
                <span asp-validation-for="PdtNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PdtPreco" class="control-label"></label>
                <input asp-for="PdtPreco" class="form-control" />
                <span asp-validation-for="PdtPreco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PdtMarca" class="control-label"></label>
                <input asp-for="PdtMarca" class="form-control" />
                <span asp-validation-for="PdtMarca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PdtLocalProduto" class="control-label"></label>
                <input asp-for="PdtLocalProduto" class="form-control" />
                <span asp-validation-for="PdtLocalProduto" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Criar Produto" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
